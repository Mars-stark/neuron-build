FROM ubuntu:20.04

ARG ARCH=armv4
ARG LIB_DIR=/opt/externs/libs/armv4-linux-gnu
ARG COMPILE=arm-linux-gnueabihf

ENV TZ=Asia/Shanghai \
    DEBIAN_FRONTEND=noninteractive

RUN apt update \
    && apt install -y tzdata \
    && ln -fs /usr/share/zoneinfo/${TZ} /etc/localtime \
    && echo ${TZ} > /etc/timezone \
    && dpkg-reconfigure --frontend noninteractive tzdata \
    && rm -rf /var/lib/apt/lists/*

RUN apt-get -y update && apt-get -y install \
	sudo pkg-config alien git gcc openssl libssl-dev

RUN git clone -b v3.24.2 https://github.com/Kitware/CMake.git && \
    cd CMake && \
    ./bootstrap && make -j4 && sudo make install

RUN apt-get -y install gcc-arm-linux-gnueabihf g++-arm-linux-gnueabihf

COPY ./install.sh /tmp/
RUN /tmp/install.sh -d $LIB_DIR -a $ARCH -c $COMPILE






USER root
